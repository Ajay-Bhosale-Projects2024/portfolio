    <style>

        html, body {
            margin: 0;
            padding: 0;
            scroll-behavior: smooth;
        }

        #myCarousel {
            width: 100%;
            height: 300px; /* Medium rectangle height */
        }

        .carousel-item img {
            width: 100%;
            height: 100%;
            object-fit: cover; /* Cover from all sides */
        }
        /*Css for images respoicsive below car*/

        /* Carousel Image Styling */
        .carousel-img {
            object-fit: contain; /* Keeps entire image visible */
            height: 60vh; /* 60% of screen height */
            background: #fff; /* White background for certificates */
            padding: 10px; /* Padding around certificates */
        }

        /* Mobile Optimization */
        

        /* Section styling */
        #certificates {
            background: linear-gradient(135deg, #fdfbfb, #ebedee); /* Subtle background */
        }

            /* Headings */
            #certificates h2 {
                color: #333;
                letter-spacing: 1px;
            }

        /* Carousel Shadow & Rounding */
        #certificatesCarousel {
            border-radius: 20px;
        }

        /* Indicators Styling */
        .carousel-indicators [data-bs-target] {
            background-color: #ff512f; /* Matches navbar gradient */
            width: 10px;
            height: 10px;
            border-radius: 50%;
        }

        /* Carousel Controls */
        .carousel-control-prev-icon,
        .carousel-control-next-icon {
            background-size: 100% 100%;
            filter: drop-shadow(0px 0px 3px black);
        }

        

    </style>
</head>


